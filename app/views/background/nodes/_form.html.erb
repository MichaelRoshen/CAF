<%= simple_form_for([:background,@node]) do |f| %>
  <%= render 'shared/error_messages', target: @node %>
  <fieldset>
    <legend></legend>
    <%= f.input :name %>
    <%= f.input :section_id, collection: Section.all.collect { |s| [s.name,s.id] } %>
    <%= f.input :sort %>
    <%= f.input :summary, as: :text, input_html: { style: "width:500px; height:200px;"} %>
    <div class="form-actions">
      <%= f.submit "保存", class: "btn btn-primary", 'data-disable-with' => "正在保存" %>
      <%= link_to '返回', background_nodes_path %>
    </div>
  </fieldset>
<% end %>
