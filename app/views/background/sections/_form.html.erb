<%= simple_form_for([:background,@section]) do |f| %>
  <%= render 'shared/error_messages', target: @section %>
  <fieldset>
    <legend></legend>
    <%= f.input :name %>
    <%= f.input :sort %>
    <div class="form-actions">
      <%= f.submit "保存", class: "btn btn-primary", 'data-disable-with' => "正在保存" %>
      <%= link_to '返回', background_sections_path %>
    </div>
  </fieldset>
<% end %>
